<%- include('header'); -%>

<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-6">
            <div class="p-4 bg-white notes">
                <div class="d-flex flex-row align-items-center notes-title">
                    <h4>Personal</h4><span class="px-2 review-text ml-2 rounded"></span>
                </div>
                <div class="d-flex flex-row align-items-center align-content-center">
                    <span class="rounded info"><%= listTitle %></span>
                </div>
            </div>

            <div class="p-3 bg-white">
                <%  for(var i =0; i<newListItems.length; i++){ %>
                <div class="d-flex align-items-center">
                    <label><input type="checkbox" class="option-input radio">
                        <span class="label-text"><%= newListItems[i] %></span>
                    </label>
                </div>
                <%  } %>
                <form class="item" action="/" method="post">
                    <input type="text" id="todo" name="newItem" placeholder="Add New Item" autocomplete="off"/>
                    <button type="submit" name="list" value="<%= listTitle %>">+</button>
                  </form>
            </div>
        </div>
    </div>
</div>

<%- include('footer'); -%>